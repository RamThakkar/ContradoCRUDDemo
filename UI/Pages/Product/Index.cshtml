@page
@model UI.Pages.Product.IndexModel



<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Product</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Products.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Products.FirstOrDefault().ProdName">Name</label>
                        </th>
                        <th>
                            <label asp-for="Products.FirstOrDefault().ProdDescription">Description</label>
                        </th>
                        <th>
                            <label asp-for="Products.FirstOrDefault().ProdCatName">Category</label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.ProdName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ProdDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ProdCatName)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.ProductId" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.ProductId" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Products available.</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th> Desription</th>
                    <th> Category</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

</div>
@section Scripts{
    <script src="~/js/ProductList.js"></script>
}




